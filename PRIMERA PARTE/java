public class Suma {
  public static void main(String[] args) {
    int num1 = 5;
    int num2 = 10;
    int num3 = 15;

    int resultado = sumar(num1, num2, num3);
    System.out.println("La suma de " + num1 + ", " + num2 + " y " + num3 + " es: " + resultado);
  }

  public static int sumar(int a, int b, int c) {
    return a + b + c;
  }
}